{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "indent": ["error", 4],
        "no-tabs": 0,
        "padded-blocks": ["error", "always"],
        "react/prop-types": "off",
        "react/self-closing-comp": "warn",
        "react/react-in-jsx-scope": "off"
    }
}
